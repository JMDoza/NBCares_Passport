        text-shadow: 0px -1px 0px #ffffff, 0px 1px 0px #ffffff,
          1px 0px 0px #ffffff, -1px 0px 0px #ffffff, -1px -1px 0px #ffffff,
          -1px 1px 0px #ffffff, 1px 1px 0px #ffffff, 1px -1px 0px #ffffff;
        display: none;
