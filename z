import React from 'react'; import { StyleSheet, Text, View, Button } from
'react-native'; import * as Print from 'expo-print'; import * as Sharing from
'expo-sharing'; export default function App() { async function execute() { const
html = `

<!DOCTYPE html>

<html lang="en">
  <head>
